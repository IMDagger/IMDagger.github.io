    &lt;span class="pgcss-o"&gt;}&lt;/span&gt;

    &lt;span class="pgcss-kd"&gt;public&lt;/span&gt; &lt;span class="pgcss-nf"&gt;MediaLoader&lt;/span&gt;&lt;span class="pgcss-o"&gt;()&lt;/span&gt; &lt;span class="pgcss-o"&gt;{&lt;/span&gt;
